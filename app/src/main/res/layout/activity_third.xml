<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Snapy"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPhotoSwipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Photo Swipe"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            app:cornerRadius="8dp"
            app:backgroundTint="#9C27B0"
            android:textColor="@color/white"
            app:strokeColor="#FF4081"
            app:strokeWidth="2dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAICategorization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AI Photo Categorization"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            app:cornerRadius="8dp"
            app:backgroundTint="#9C27B0"
            android:textColor="@color/white"
            app:strokeColor="#FF4081"
            app:strokeWidth="2dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCollage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Photo Collage"
            android:textSize="18sp"
            android:padding="16dp"
            app:cornerRadius="8dp"
            app:backgroundTint="#9C27B0"
            android:textColor="@color/white"
            app:strokeColor="#FF4081"
            app:strokeWidth="2dp"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
