<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="@color/dark_background"> <!-- Dark background for the whole screen -->

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to SnapSwipe"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
    android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/photoSwipeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Photo Swipe"
        android:background="@color/purplish_pink"
    android:textColor="@android:color/white"
    android:layout_marginBottom="10dp"/>

    <!-- Disable other buttons for now -->
    <Button
        android:id="@+id/quickNoteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quick Note &amp; File Swiper"
        android:background="@color/purplish_pink_dark"
    android:textColor="@android:color/white"
    android:layout_marginBottom="10dp"
    android:enabled="false"/>

    <Button
        android:id="@+id/memoryScrapbookButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Memory Scrapbook"
        android:background="@color/purplish_pink_dark"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp"
        android:enabled="false"/>

    <Button
        android:id="@+id/imageSortingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AI-Powered Image Sorting"
        android:background="@color/purplish_pink_dark"
        android:textColor="@android:color/white"
        android:enabled="false"/>
</LinearLayout>
